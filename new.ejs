<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br />
    <h2 class="mb-3">To Create a new Listing :</h2>
    <form method="post" action="/listings" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Enter title here : </label>
        <input type="text" name="listing[title]" class="form-control" placeholder="Add a catchy title" required/>
      </div>

      <div class="mb-3">
        <label for="title" class="form-label">Enter image URL here : </label>
        <input type="text" name="listing[url]" class="form-control"/>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label"
          >Enter description here :</label
        >
        <input type="text" name="listing[description]" class="form-control" required/>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Enter price here : </label>
          <input type="number" name="listing[price]" class="form-control" placeholder="1200" required/>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Enter country here : </label>
          <input type="text" name="listing[country]" class="form-control" placeholder="India" required/>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Enter location here : </label>
        <input type="text" name="listing[location]" class="form-control" placeholder="Delhi, Kashmere Gate" required/>
      </div>

      <button class="btn btn-dark add-btn">Submit</button> <br><br>
    </form>
  </div>
</div>
