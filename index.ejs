<% layout('layouts/boilerplate') %>
<body>
    <h2 class="mt-3 mb-2">All Listings</h2>

    <div class="row">
        <% for(listings of allListings){ %>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <a href="/listings/<%= listings._id %>" class="info-anc">
                    <div class="card" style="width: 100%;">
                        <img
                        src="<%= listings.image %>"
                        class="card-img-top show-img"
                        alt="Searching"
                        />
                        <div class="card-img-overlay">abcd</div>
                        <div class="card-body">
                            <b><p class="card-text mt-2"><%= listings.title %></b></p>
                            <p>&#8377; <%= listings.price.toLocaleString("en-IN") %> / night</p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
    
</body>
</html>

